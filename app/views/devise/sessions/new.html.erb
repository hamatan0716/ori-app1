<div class="signin">
  <div class="col-md-5 mx-auto">
    <div class="card-body align-items-center">
      <h1 class="app-logo mt-5 mb-4 text-center">EnrIch</h1>
      <h3 class="main-title mt-2 mb-5 text-center">ログイン</h3>
      <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <%= render "devise/shared/error_messages", model: f.object %>

        <div class="form-group">
          <%= f.label :email, class: "form-label visually-hidden" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control mt-1", placeholder:"メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード", class: "form-label visually-hidden" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-1", placeholder: "パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-danger btn-sm mt-3" %>
        </div>
      <% end %>
      <div class="mt-4 mb-4">
        アカウント登録はお済みですか？<%= link_to "アカウント登録", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/user_footer" %>