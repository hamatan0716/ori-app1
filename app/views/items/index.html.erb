<%= render "items_header" %>

<div class="wrapper">
  <div class="top-contents">
    <p class="introduction-text"><span>EnrIch</span><br>生活を少しだけ豊かにしてくれるアイテムと出会えるアプリケーション</p>
  </div>
  <div class="container">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3 col-sm-6">
          <div class="card bg-light shadow-lg mb-3">
            <%= link_to item_path(item.id) do %>
              <div class="post-image bd-placeholder-img card-img-top" width="100%" height="180">
                <%= image_tag item.image, class: "item-img" %>
                <div class="evaluation">
                  <span><%= item.wants.count%></span>
                </div>
              </div>
            <% end %>
            
            <div class="card-body">
              <h4 class="article-title"><%= item.name %></h4>
              <p class="article-text card-text text-truncate">
                <%= item.introduction %>
              </p>
              <div class="article-user">
                <%= link_to user_path(item.user_id), class: "user-show-link" do %>
                  <% if item.user.avatar.present? %>
                    <%= image_tag item.user.avatar, class: "article-user-icon" %>
                  <% end %>
                  <span class="article-username"><%= item.user.nickname %></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
