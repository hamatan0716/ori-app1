<%= render "items_header" %>
<div class="item-post">
  <h1 class="item-post-title text-center mt-5">新規投稿</h1>
  <div class="item-post-form mt-4">
    <%= form_with(model: @item, local: true) do |f| %>
      <%= render "devise/shared/error_messages", model: f.object %>

      <div class="form-group">
        <%= f.label :name, "タイトル", class: "form-label mt-3" %>
        <%= f.text_field :name, class: "form-control mt-1", placeholder:"例）シンプルなデザインで使いやすいマウス！[商品名○○]", rows: "10" %>
      </div>

      <div class="img-upload">
          <%= f.label :image, "アイテム画像",  class: "form-label text-black mt-3" %>
          <%= f.file_field :image, id:"item-image", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "本文", class: "form-label mt-3" %>
        <%= f.text_area :introduction, class: "form-control mt-1", placeholder:"お気に入りのアイテムを紹介しよう！", rows: "10" %>
      </div>
      
      <div class="form-group">
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class: "form-select form-select-sm mt-1 w-50"}) %>
      </div>

      <div class="actions text-center d-grid gap-2 col-6 mx-auto mt-5">
        <%= f.submit "投稿する", class: "btn btn-outline-danger btn-sm" %>
      </div>

    <% end %>
  </div>
</div> 

<%= render "devise/shared/user_footer" %>