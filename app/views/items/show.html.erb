<%= render "items_header" %>

<div class="wrapper py-4">
  <%# 投稿内容 %>
  <div class="wrapper-showcontents rounded-3" >
    <div class="show-user">
      <%= link_to user_path(@item.user_id), class: "user-show-link" do %>
        <% if @item.user.avatar.present? %>
          <%= image_tag @item.user.avatar, size: '50x50' %>
        <% else %>          
          <svg xmlns="http://www.w3.org/2000/svg" width="43" height="43" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
          </svg>
        <% end %>
        <%= @item.user.nickname %>
      <% end %>
    </div>
    
    <% if user_signed_in? && current_user.id == @item.user.id %>
      <div class="text-end mt-1">
        <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to edit_item_path(@item.id) do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="gray" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
            <% end %>
            &nbsp;&nbsp;
            <%= link_to item_path(@item.id), method: :delete, data: { confirm: '投稿を削除しますか？'} do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="gray" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
            <% end %>
        </div>
      </div>
    <% end %>
    
    <h4 class="text-center mt-2">
      <%= @item.name %>
    </h4>
    
    <div class="text-center mt-2">
      <%= image_tag @item.image, size: '220x220', class: "img-thumbnail" %>
    </div>
    
    <div class="show-text text-center mb-3">
      <%= @item.introduction %>
    </div>
    <% if user_signed_in? %>
      <div id="item_<%= @item.id %>">
        <%= render 'want' %>
      </div>
    <% end %>
  </div>

  <%# コメント %>
  <div class="wrapper-comments">
    <div class="mt-5 text-center">
      <% if user_signed_in? %>
        <%= form_with(model: [@item, @comment], local: true) do |form| %>
            <%= form.label :text, class: "form-label visually-hidden" %>
            <%= form.text_field :text, placeholder: "コメントする", class: "comment-form" %>
            <%= form.submit "投稿", class: "btn btn-outline-secondary btn-sm" %>
        <% end %>
      <% else %>
        <strong><p>※ ログインすると投稿にコメントができます</p></strong>
        <%= link_to 'ログインする', new_user_session_path %>
      <% end %>
    </div>
    <div class = "mt-3">
      <% @comments.each do |comment| %>
        <div class="comment-box mb-2">
          <div class="comment-info">
            <p class="comment-user mb-1">
              <%= link_to user_path(comment.user_id), class: "user-show-link" do %>
                <% if comment.user.avatar.present? %>
                  <%= image_tag comment.user.avatar, size: "25x25" %>
                <% else %>          
                  <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                  </svg>
                <% end %>
                <%= comment.user.nickname %>
              <% end %>
            </p>
            <p class="comment-day">
              <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
            </p>
          </div>
          <p class="mb-0">
            <%= comment.text %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
  
</div>

<%= render "devise/shared/user_footer" %>